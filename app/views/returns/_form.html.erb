<%= form_tag('/returns/', :method => :post) %>
  
  <h2> Item </h2>
  <div>
    From: <%= current_user.email %>
  </div>
  <div>
    <% if !@lend_id.nil? %>
      To: <%= User.find(@lend_id).email %>
    <% else %>
      To: <% text_field_tag "email" %>
    <% end %>
  </div>

  <div class="actions">
    <%= submit_tag 'Accept request' %>
  </div>
