<h1>Listing reminders</h1>

<table>
  <tr>
    <th>Return date</th>
    <th>Frequency</th>
    <th>Return</th>
    <th>Sent</th>
    <th>Last sent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= reminder.return_date %></td>
    <td><%= reminder.frequency %></td>
    <td><%= reminder.return_id %></td>
    <td><%= reminder.sent %></td>
    <td><%= reminder.last_sent %></td>
    <td><%= link_to 'Show', reminder %></td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

