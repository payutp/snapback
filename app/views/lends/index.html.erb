<% if current_user %>
<%= link_to 'New Lend', new_lend_path %> <%= link_to 'New Return', new_return_path %>
  <h1>My Active Lend Requests</h1>

  <table>
    <tr>
      <th>Status</th>
      <th>To</th>
      <th> Item </th>
      <th></th>
    </tr>

  <% @lends_open.each do |lend| %>
    <tr>
      <td><%= lend.status %></td>
      <td>
        <% if lend.to_id == nil %>
          <%= "Waiting for a nice person to lend" %>
        <% else %>
          <%= User.find(lend.to_id).email %>
        <% end %>
      </td>
      <td><%= lend.item.name %> </td>
      <td><%= link_to 'Cancel', lend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

  <% @lends_pending.each do |lend| %>
    <tr>
      <td><%= lend.status %></td>
      <td>
        <% if lend.to_id == nil %>
          <%= "Waiting for a nice person to lend" %>
        <% else %>
          <%= User.find(lend.to_id).email %>
        <% end %>
      </td>
      <td><%= lend.item.name %> </td>
      <td></td>
    </tr>
  <% end %>
  </table>

  <br />

  <h1> People are looking for these items: </h1>

  <table>
  <tr>
    <th> User </th>
    <th> Item </th>
    <th> </th>
  </tr>

  <% @lends_others.each do |lend| %>
  <tr>
  <th> <%= User.find(lend.user_id).email %></th>
  <th> <%= lend.item.name %></th>
  <td><%= link_to 'Accept', new_return_path(:id => lend.id) %></td>
  </tr>
  <% end %>
  </table>
<% else %>
  <h1> People are looking for these items: </h1>

  <table>
  <tr>
    <th> User </th>
    <th> Item </th>
  </tr>

  <% @lends.each do |lend| %>
  <tr>
  <th> <%= User.find(lend.user_id).email %></th>
  <th> <%= lend.item.name %></th>
  </tr>
  <% end %>
  </table>
<% end %>